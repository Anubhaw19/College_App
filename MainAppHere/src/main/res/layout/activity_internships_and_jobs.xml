<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8CDD3"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.InternshipsAndJobsActivity">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:shimmer_auto_start="true"
        shimmer:duration="800"
        tools:ignore="MissingConstraints">

        <!-- Adding 7 rows of placeholders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/viewholder_shimmereffect" />
            <include layout="@layout/viewholder_shimmereffect" />
            <include layout="@layout/viewholder_shimmereffect" />
            <include layout="@layout/viewholder_shimmereffect" />
            <include layout="@layout/viewholder_shimmereffect" />
            <include layout="@layout/viewholder_shimmereffect" />
            <include layout="@layout/viewholder_shimmereffect" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/internship_an_jobs_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/each_internship_or_job"/>

</androidx.constraintlayout.widget.ConstraintLayout>