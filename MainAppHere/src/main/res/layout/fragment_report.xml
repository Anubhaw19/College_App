<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F5F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/inchargePhoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/man"/>

            <TextView
                android:id="@+id/inchargeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Main Incharge Name"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>



        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/spinner_report"
            android:spinnerMode="dialog"
            android:background="@drawable/spinner_bg"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            android:textDirection="firstStrong"
            android:outlineSpotShadowColor="@color/white"/>


            <EditText
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Topic"
                android:background="@drawable/spinner_bg"
                android:padding="6dp"
                android:textSize="20sp"
                android:textStyle="bold"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problem"
            android:padding="5dp"
            android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/problem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Assign problem"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@drawable/spinner_bg"
                android:inputType="textEmailAddress"
                android:maxLines="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modification"
            android:padding="5dp"
            android:layout_marginTop="30dp"/>


            <EditText
                android:id="@+id/modification"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Requirement"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_bg"
                android:inputType="textEmailAddress"
                android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/attachement"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:hint="Add Attachement"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_action_attachement"
                android:drawablePadding="7dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/spinner_bg"
                android:maxLines="1"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="SEND"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>