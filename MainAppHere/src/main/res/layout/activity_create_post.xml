<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreatePostActivity">

    <ImageView
        android:id="@+id/post_content_image"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:src="@drawable/flower"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerInside"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/post_content_add_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_content_image"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="#2d6187"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"/>

    <EditText
        android:id="@+id/post_content_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:maxLines="10"
        android:background="@drawable/edit_text_bg"
        android:padding="10dp"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_content_add_image_button"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/add_issue_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Post"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_content_edit_text"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_border"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:padding="6dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
